<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/rounded_corner_bg"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/ivDoctorImage"
        android:layout_width="117dp"
        android:layout_height="114dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_doctor_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Doctor's Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivDoctorImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSpeciality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Specialty: Cardiologist"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivDoctorImage"
        app:layout_constraintTop_toBottomOf="@+id/tvDoctorName" />

    <TextView
        android:id="@+id/tvExperience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Experience: 10 years"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivDoctorImage"
        app:layout_constraintTop_toBottomOf="@+id/tvSpeciality" />

    <TextView
        android:id="@+id/tvConsultationFee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="172.23$/consulation"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivDoctorImage"
        app:layout_constraintTop_toBottomOf="@+id/tvExperience" />

