<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videoCalling.VideoCallActivity">

  <Button
      android:id="@+id/meetButton"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Start Video Call"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@color/white"
      android:background="@drawable/rounded_corner_input"/>

  <TextView
      android:id="@+id/selectedUrlTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Appointment Link: "
      app:layout_constraintTop_toBottomOf="@+id/meetButton"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@android:color/black"
      android:textSize="16sp"
      android:background="@drawable/rounded_edittext"/>

</androidx.constraintlayout.widget.ConstraintLayout>
