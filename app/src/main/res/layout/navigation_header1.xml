<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A19E9E">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user"/>
        <!-- https://unsplash.com/photos/man-riding-on-boat-near-golden-mosque-dskdujAQU44
        last accessed 20/03/2024 -->

        <!-- changes needed in android:text-->
        <TextView
            android:id="@+id/name_of_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:text="Dr.Freddy James"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <!-- changes needed in android:text-->
        <TextView
            android:id="@+id/doctorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor ID:"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/black" />

    </LinearLayout>



</LinearLayout>